/**
 * The program will allow us to sum up all the even numbers up until n.
 * 
 * @author Karim
 *
 */

public class SumEven {
	
	//Constructor
	public static double sum(int n) {
		double sum = 0.0;
		
		//Sum of all even number 1 to n.
		for (int i = 2; i <= n; i++) {

			//if the number is divisible by 2, then it is an even number
			if (i % 2 == 0) {
				sum = sum + i;
			}

		}
		return sum;
	}

	// main method to print out the desired summation
	public static void main(String[] args) {

		System.out.println("The sum of the first " + 10 + " even numbers is " + sum(10));
		//note: 10 can be replaced by any number, hence why the parameter is n.

	}

}
